<div id="contactPage" class="container">
    <h1> <%= title %>  </h1>
    <br>
    <p>You can contact me at:</p>
    <address>
        <a href="mailto:salma03.ch@gmail.com">salma03.ch@gmail.com</a><br>
    </address>
    <p>Or use the form below</p>
    <form method="post">
        <fieldset>
            <label for="fname">First Name</label>
            <input type="text" id="fname" name="fname" tabindex="3">

            <label for="lname">Last Name</label>
            <input type="text" id="lname" name="lname" tabindex="5">

            <label for="phone">Contact Number</label>
            <input type="tel" id="phone" name="phone" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" tabindex="7">

            <label for="email">Email</label>
            <input type="email" id="email" name="email" tabindex="9">

            <label for="message">Message</label>
            <textarea id="message" name="message" placeholder="Write your message..." style="height:200px" tabindex="11"></textarea>

            
            <input type="submit" name="btnSubmit" value="Send" class="button" tabindex="13">
        
            <input type="reset" name="btnReset" value="Clear" class="button" tabindex="15">

        </fieldset>
        
    </form>

</div>