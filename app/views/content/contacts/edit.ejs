<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= contact._id %>">
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contact Name"
                    name="name"
                    value="<%= contact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="nameTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contact Number"
                    name="number"
                    value="<%= contact.year %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="nameTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Email Address"
                    name="email"
                    value="<%= contact.director %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>Submit</button>

                    <a href="/contacts/list" class="btn btn-warning">
                        <i class="fas fa-undo"></i>Cancel</a>

            </form>
        </div>
    </div>
</div>